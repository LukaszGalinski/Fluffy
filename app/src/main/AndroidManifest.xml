<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.lukasz.galinski.fluffy">

    <application
        android:name=".framework.di.ApplicationModule"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Fluffy.OnBoarding">
        <activity
            android:name=".presentation.SplashActivity"
            android:exported="true"
            android:theme="@style/Theme.Fluffy.Splash">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".presentation.account.AccountHostActivity"
            android:theme="@style/Theme.Fluffy.OnBoarding"
            android:windowSoftInputMode="adjustPan" />
        <activity
            android:name=".presentation.main.MainMenuActivity"
            android:theme="@style/Theme.Fluffy.OnBoarding" />
    </application>
</manifest>